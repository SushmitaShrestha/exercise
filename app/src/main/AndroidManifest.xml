        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".Home" />
        <activity android:name=".TabLayoutAdapter" />
        <activity android:name=".Readapter" />
        <activity android:name=".WorkoutDescription" />
        <activity android:name=".RecyclerItemClickListener" />
        <activity android:name=".RestDayFragment" />
        <activity android:name=".MondayDayFragment" />
        <activity android:name=".TuesdayDayFragment" />
